{
  "name": "project-anthology:-the-f1-narrative",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"vite\"",
    "dev:api": "npx --yes kill-port 3001 2>nul & tsx server/dev-api-server.ts",
    "dev:vite": "vite",
    "build": "npm run images:gen && npm run images:optimize-story-38-40 && vite build",
    "build:vercel": "npm run images:gen || true && npm run images:optimize-story-38-40 || true && vite build",
    "build:check": "npm run build && node scripts/check-bundle-size.js",
    "preview": "vite preview",
    "images:gen": "node scripts/generate-responsive-images.js",
    "images:optimize-story-38-40": "node scripts/optimize-story-images-38-40.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "check:bundle": "node scripts/check-bundle-size.js"
  },
  "dependencies": {
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/playfair-display": "^5.2.8",
    "@sentry/react": "^10.38.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/node": "^3.0.0",
    "@vercel/speed-insights": "^1.2.0",
    "dompurify": "^3.3.1",
    "jsdom": "^25.0.1",
    "framer-motion": "^12.23.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.30.3",
    "sharp": "^0.34.5"
  },
  "optionalDependencies": {
    "cloudinary": "^1.47.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.47",
    "svgo": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-image-optimizer": "^2.0.3",
    "vite-plugin-pwa": "^0.21.0",
    "vitest": "^2.1.8"
  }
}
